#include <iostream>
using namespace std;

int main(){
    
    int n, temp;
    std::cout << "Enter size of the Array: " << std::endl;
    cin>>n;
    
    int arr[n];
    
    for(int i = 0 ; i < n ; i++){
        cin>>arr[i];
    }
    
    for(int i = 0 ; i < n-1 ; i++){
        
        for(int j = 0 ; j < n-1-i ; j++){
            
            if(arr[j] > arr[j+1]){
                temp = arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
            
        }
        
    }
    
    cout<<"Sorted Array is: ";
    
    for(int i = 0 ; i < n ; i++){
        cout<<arr[i]<<" ";
    }
    
}
